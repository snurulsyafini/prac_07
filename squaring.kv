BoxLayout:
    orientation: 'vertical'
    id: outer_box
    BoxLayout:
        id: first_row_box
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 36
            multiline: False
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
            font_size: 36
        Label:
            id: output_label
            color: (1, 0.752, 0.766, 1)
            font_size: 36
    Label:
        id: second_row_box
        text: 'Enter a number and press "Square"'
        font_size: 36

